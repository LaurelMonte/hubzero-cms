<install type="module" version="1.5" client="administrator">
	<name>Dashboard</name>
	<author>hubzero.org</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>This module shows on the Admin area Home Page and displays items that administrator needs to watch for.</description>
	<files>
		<filename module="mod_dashboard">mod_dashboard.php</filename>
		<filename>dashboard.css</filename>
		<filename>index.html</filename>
		<filename>images/abuse.gif</filename>
		<filename>images/barbg.gif</filename>
		<filename>images/barbg_red.gif</filename>
		<filename>images/cart.gif</filename>
		<filename>images/graph.gif</filename>
		<filename>images/pending_resources.gif</filename>
		<filename>images/quote.gif</filename>
		<filename>images/stophand.gif</filename>
		<filename>images/support.gif</filename>
		<filename>images/tool.gif</filename>
		<filename>images/wish.gif</filename>
	</files>
	<params>
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
	</params>
</install>
