<config>
	<params>
		<param name="ldapGroupMirror" type="radio" default="1" label="Enable LDAP Mirror" description="Mirror Group Data to LDAP.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="uploadpath" type="text" menu="hide" default="/site/groups" label="Upload path" description="File path for pictures" />
		<param name="iconpath" type="text" menu="hide" default="/components/com_groups/images/icons" label="Icons" description="File path for icons" />
		<param name="join_policy" type="list" default="0" label="Default Join Policy" description="The default default join policy for new groups.">
			<option value="0">Public</option>
			<option value="1">Restricted</option>
			<option value="2">Invite Only</option>
			<option value="3">Closed</option>
		</param>
		<param name="privacy" type="list" default="0" label="Default Privacy" description="The default privacy setting for new groups.">
			<option value="0">Public</option>
			<option value="1">Protected</option>
			<option value="4">Private</option>
		</param>
		<param name="access" type="list" default="0" label="Default Content Privacy" description="The default privacy setting for content associated with groups.">
			<option value="0">Public</option>
			<option value="3">Protected</option>
			<option value="4">Private</option>
		</param>
	</params>
</config>
