<install type="module" version="1.5">
	<name>My Messages</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>This module will display a list of unread messages sent by the site.</description>
	<files>
		<filename module="mod_mymessages">mod_mymessages.php</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
		<filename>mod_mymessages.css</filename>
		<filename>images/error.gif</filename>
	</files>
	<params>
		<param name="moduleclass" type="text" default="" label="Module class" description="A CSS class to be applied to the module, this allows individual module styling" />
		<param name="limit" type="text" default="5" label="# to display" description="The number of items to display." />
	</params>
	<languages>
		<language tag="en-GB">en-GB.mod_mymessages.ini</language>
        </languages>
</install>
