<?xml version="1.0" encoding="iso-8859-1"?>
<install type="module" version="1.5.0">
	<name>Slideshow</name>
	<author>Alissa Nedossekina</author>
	<creationDate>June 2009</creationDate>
	<copyright>(C) 2000 - 2004 Miro International Pty Ltd</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>alisa@purdue.edu</authorEmail>
	<authorUrl>www.nanohub.org</authorUrl>
	<version>1.1.0</version>
	<description>Displays HUB flash image slideshow.</description>
	<files>
		<filename module="mod_slideshow">mod_slideshow.php</filename>
		<filename>mod_slideshow.js</filename>
		<filename>images/banner600x230.swf</filename>
		<filename>images/banner600x350.swf</filename>
		<filename>index.html</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/default.php</filename>
	</files>
	<params>
		<param name="height" type="radio" default="230" label="Height of banner" description="Height of banner">
			<option value="100">100</option>
			<option value="180">180</option>
			<option value="230">230</option>
			<option value="350">350</option>
		</param>
		<param name="width" type="radio" default="600" label="Width of banner" description="Width of banner">
			<option value="600">600</option>
			<option value="650">650</option>
		</param>
		<param name="stype" type="radio" default="0" label="Slideshow Type" description="Determines whether to display flash rotation or random image on each page load">
			<option value="0">Rotating Slideshow</option>
			<option value="1">Random Image on Page Load</option>
		</param>
		<param name="transitiontype" type="radio" default="fade" label="Trasition type" description="Slide transition effect">
			<option value="fade">fade</option>
			<option value="flyin">fly from left</option>
		</param>
		<param name="random" type="radio" default="0" label="Random order" description="Determines order of slides.">
			<option value="1">yes</option>
			<option value="0">no</option>
		</param>
		<param name="timerdelay" type="radio" default="fade" label="Time for each slide (seconds)" description="Slide time in seconds">
			<option value="8000">8</option>
			<option value="10000">10</option>
			<option value="12000">12</option>
		</param>
		<param name="image_dir" type="text" default="/site/slideshow" label="Images directory" description="Directory where images for banner are stored" />
		<param name="alias" type="text" default="" label="Alias of banner instance" description="If multiple banners are used on this hub, specify a unique name for this banner. E.g. 'homepage'" />
		<param name="noflash_link" type="text" default="" label="URL for image link" description="Determines URL when clicking on random image" />
	</params>
</install>