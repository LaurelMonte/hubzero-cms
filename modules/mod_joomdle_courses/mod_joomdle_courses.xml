<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Joomdle Courses</name>
	<author>Antonio Duran</author>
	<creationDate>October 2009</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>antonio.duran.terres@gmail.com</authorEmail>
	<authorUrl>www.joomdle.com</authorUrl>
	<version>0.23</version>
	<description>Shows Moodle Courses list</description>
	<files>
		<filename module="mod_joomdle_courses">mod_joomdle_courses.php</filename>
		<filename module="mod_joomdle_courses">index.html</filename>
		<filename module="mod_joomdle_courses">helper.php</filename>
		<filename module="mod_joomdle_courses">tmpl/default.php</filename>
		<filename module="mod_joomdle_courses">elements/course.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_joomdle_courses.ini</language>
		<language tag="es-ES">language/es-ES.mod_joomdle_courses.ini</language>
		<language tag="fr-FR">language/fr-FR.mod_joomdle_courses.ini</language>
                <language tag="ro-RO">language/ro-RO.mod_joomdle_courses.ini</language>
                <language tag="de-DE">language/de-DE.mod_joomdle_courses.ini</language>
                <language tag="it-IT">language/it-IT.mod_joomdle_courses.ini</language>
	</languages>
	<params addpath="/administrator/components/com_joomdle/elements">
		<param name="linkto" type="radio" default="moodle" label="CJ LINKTO" description="CJ LINKTO DESCRIPTION">
			<option value="moodle">Moodle course</option>
			<option value="description">Course description</option>
		</param>
		<param name="guest courses only" type="radio" default="0" label="CJ GUEST COURSES ONLY" description="CJ GUEST COURSES ONLY DESCRIPTION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="free courses only" type="radio" default="0" label="CJ FREE COURSES ONLY" description="CJ FREE COURSES ONLY DESCRIPTION">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="latest courses only" type="text" size="3" default="" label="CJ LATEST COURSES ONLY" description="CJ LATEST COURSES ONLY DESCRIPTION" />
<param name="courses_shown" type="courselist" default="" multiple="multiple" label="CJ SELECT COURSES"
 description="CJ SELECT COURSES DESCRIPTION">
</param>
<param name="categories_shown" type="coursecategorylist" default="" multiple="multiple" label="CJ SELECT CATEGORIES"
 description="CJ SELECT CATEGORIES DESCRIPTION">
</param>
	<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />


	</params>
</install>
