<install version="1.5" type="plugin" group="resources">
	<name>Resources - Share</name>
	<author>snowwitje</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display options to post resource link on Facebbok, Twitter etc. </description>
	<files>
		<filename plugin="share">share.php</filename>
	</files>
	<languages>
		<!-- language tag="en-GB">en-GB.plg_resources_share.ini</language -->
	</languages>
	<params>
		<param name="icons_limit" type="text" size="5" default="7" label="Limit of Icons" description="Number of share links to display"/>
		<param name="share_facebook" type="radio" default="1" label="Show Facebook icon" description="Allow to share with Facebook">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_twitter" type="radio" default="1" label="Show Twitter icon" description="Allow to share on Twitter">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_google" type="radio" default="1" label="Show Google icon" description="Allow to add a Google bookmark">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_digg" type="radio" default="1" label="Show Digg icon" description="Allow to share on Digg">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_technorati" type="radio" default="1" label="Show Technorati icon" description="Allow to share on Technorati">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_delicious" type="radio" default="1" label="Show Delicious icon" description="Allow to share on Delicious">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_reddit" type="radio" default="1" label="Show Reddit icon" description="Allow to share on Reddit">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_email" type="radio" default="1" label="Show email icon" description="Allow to email">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="share_print" type="radio" default="1" label="Show print icon" description="Allow to print">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
