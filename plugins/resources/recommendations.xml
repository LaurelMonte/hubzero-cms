<install version="1.5" type="plugin" group="resources">
	<name>Resource - Recommendations</name>
	<author>Shawn Rice</author>
	<copyright>Copyright 2005-2009 by Purdue Research Foundation, West Lafayette, IN 47906</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GPLv2</license>
	<description>Display recommendations for a resource</description>
	<files>
		<filename plugin="recommendations">recommendations.php</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_resources_recommendations.ini</language>
	</languages>
	<params>
		<param name="webservice" type="text" size="25" default="http://129.105.36.83:8080/services/recommenderService?wsdl" label="Web Service" description="The web service to retrieve records from"/>
		<param name="host" type="text" size="25" default="" label="WS host" description="The web service host"/>
		<param name="port" type="text" size="25" default="" label="WS port" description="The web service port"/>
		<param name="username" type="text" size="25" default="" label="WS username" description="The web service username"/>
		<param name="password" type="text" size="25" default="" label="WS password" description="The web service password"/>
		<param name="display_limit" type="text" size="5" default="10" label="Display Limit" description="Number of items to return"/>
	</params>
</install>